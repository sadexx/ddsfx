{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json",
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      { "include": "modules/deep-link/common/.well-known/**/*", "outDir": "dist/src" },
      { "include": "libs/emailer/common/templates/**/*", "outDir": "dist/src" }
    ]
  }
}
